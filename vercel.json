{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/next.config.js",
            "use": "@vercel/next"
        },
        {
            "src": ".",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/frontend/public/$1"
        }
    ],
    "env": {
        "NEXT_PUBLIC_API_URL": "/api"
    },
    "public": true
}
