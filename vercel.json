{
    "version": 2,
    "builds": [
        {
            "src": "backend/**",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "50mb", "runtime": "python3.9" }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/out"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/api.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}
