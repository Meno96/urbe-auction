{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/next.config.js",
            "use": "@vercel/next"
        },
        {
            "src": ".",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/public/$1"
        }
    ],
    "build": {
        "env": {
            "NEXT_PUBLIC_API_URL": "/api"
        },
        "command": "cd frontend && yarn install && yarn build && cd .. && python manage.py collectstatic --noinput && python manage.py migrate"
    },
    "public": true,
    "output": {
        "directory": "frontend/public"
    }
}
