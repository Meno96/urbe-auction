{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/next.config.js",
            "use": "@vercel/next"
        },
        {
            "src": "backend/**",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/out/$1"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "mysite.settings",
        "PYTHONUNBUFFERED": "1",
        "SECRET_KEY": "your-secret-key-here",
        "NEXT_PUBLIC_API_URL": "/api"
    },
    "build": {
        "env": {
            "NEXT_PUBLIC_API_URL": "/api"
        },
        "command": "cd frontend && yarn install && yarn build && cd ../backend && python manage.py collectstatic --noinput && python manage.py migrate"
    },
    "public": true,
    "output": {
        "directory": "frontend/public"
    }
}
