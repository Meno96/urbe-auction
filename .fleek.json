{
    "build": {
      "steps": [
        {
          "name": "backend",
          "args": [
            "pip",
            "install",
            "-r",
            "backend/requirements.txt"
          ]
        },
        {
          "name": "frontend",
          "args": [
            "yarn",
            "install"
          ]
        },
        {
          "name": "frontend",
          "args": [
            "yarn",
            "run",
            "build"
          ]
        },
        {
          "name": "frontend",
          "args": [
            "yarn",
            "next",
            "export"
          ]
        }
      ]
    },
    "main": {
      "path": "/public",
      "index": "index.html"
    },
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/api.py"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ],
    "env": {
      "DATABASE_URL": "sqlite:///db.sqlite3",
